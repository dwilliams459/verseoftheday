</head>                                                               
<body>
    @if (ViewData["Large"] != "true")
    {
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Daily Verse", "index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Verse Of the Day", "votd", "Home")</li>
                        <li>@Html.ActionLink("Random", "random", "Home")</li>
                        <li>@Html.ActionLink("Passage", "passage", "Home")</li>
                        <li>@Html.ActionLink("Copyrights", "copyright", "Home")</li>
                    </ul>
                </div>
            </div>
        </nav>        
    }

    <div class="container body-content">
        @RenderBody()
        <footer style="padding-top: 15px;">
            <p>&copy; 2019 - <a href="http://labs.bible.org">Bible.org Labs</a></p>
            <p>&copy; 2001 - <a href="http://esv.org">ESV Bible</a>.  <a asp-action="copyright" asp-controller="home">Copyright.</a></p>
        </footer>
    </div>

        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
